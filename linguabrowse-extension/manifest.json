{
  "manifest_version": 3,
  "name": "LinguaBrowse",
  "version": "1.0.0",
  "description": "Turn your everyday web browsing into language learning sessions with interactive quizzes",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon-16.png",
      "32": "images/icon-32.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "js/services/audioService.js",
        "js/services/spacedRepetition.js", 
        "js/services/dictionaryService.js",
        "content.js"
      ],
      "css": ["styles/overlay.css"]
    }
  ],
  "permissions": [
    "storage",
    "alarms"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "chrome_url_overrides": {
    "newtab": "welcome.html"
  },
  "web_accessible_resources": [{
    "resources": [
      "welcome.html",
      "js/welcome.js",
      "styles/welcome.css",
      "data/dictionaries/*.json"
    ],
    "matches": ["<all_urls>"]
  }]
}
